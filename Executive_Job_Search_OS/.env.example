# Executive Job Search OS — Environment Configuration
# Copy to .env and fill in your values

# REQUIRED: Anthropic API key for AI-powered resume tailoring and cover letters
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OPTIONAL: Override default data directory
# DATA_DIR=/path/to/Executive_Job_Search_OS/data

# OPTIONAL: Enable verbose logging (true/false)
VERBOSE=false

# OPTIONAL: Run in dry-run mode — sources and scores but does not generate PDFs (true/false)
DRY_RUN=false
